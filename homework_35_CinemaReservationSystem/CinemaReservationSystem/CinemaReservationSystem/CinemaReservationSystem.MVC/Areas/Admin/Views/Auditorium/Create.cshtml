@model AuditoriumCreateVM

@{
    var theatres = ViewBag.Theatres as List<TheatreGetVM>;
}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Auditorium Genre</h4>

                        <form class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TotalSeats">Total Seats</label>
                                <input asp-for="TotalSeats" type="text" class="form-control" id="name" placeholder="Total Seats">
                                <span class="text-danger" asp-validation-for="TotalSeats"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TheatreId">Theatre</label>
                                <select class="form-control" asp-for="TheatreId" asp-items="new SelectList(theatres,nameof(TheatreGetVM.Id), nameof(TheatreGetVM.Name))">
                                    <option disabled selected>Choose Theatre</option>
                                </select>
                                <span class="text-danger" asp-validation-for="TheatreId"></span>
                            </div>


                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light" asp-action="Index">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

