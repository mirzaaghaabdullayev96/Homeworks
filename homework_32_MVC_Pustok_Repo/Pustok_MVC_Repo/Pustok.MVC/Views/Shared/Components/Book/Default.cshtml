@model List<BookIndexVM>



@foreach (BookIndexVM book in Model)
{

    <div class="single-slide">
        <div class="product-card">
            <div class="product-header">
                <a href="#" class="author">
                    @book.AuthorName
                </a>
                <h3>
                    <a style="min-height:40px" href="product-details.html">
                        @book.Title
                    </a>
                </h3>
            </div>
            <div class="product-card--body">
                <div class="card-image">
                    <img src="~/assets/myProducts/productImages/@book.BookImages.FirstOrDefault(x=>x.IsMain==true)?.ImageURL" alt="">
                    <div class="hover-contents">
                        <a href="product-details.html" class="hover-image">
                            <img src="~/assets/myProducts/productImages/@book.BookImages.FirstOrDefault(x=>x.IsMain==false)?.ImageURL" alt="">
                        </a>
                        <div class="hover-btns">
                            <a href="cart.html" class="single-btn">
                                <i class="fas fa-shopping-basket"></i>
                            </a>
                            <a href="wishlist.html" class="single-btn">
                                <i class="fas fa-heart"></i>
                            </a>
                            <a href="compare.html" class="single-btn">
                                <i class="fas fa-random"></i>
                            </a>
                            <a href="#" data-toggle="modal" data-target="#quickModal"
                               class="single-btn">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="price-block">

                    <span class="price">£@book.PriceAfterDiscount</span>
                    @if (book.DiscountPercent > 0)
                    {
                        <del class="price-old">£@book.SalePrice</del>
                        <span class="price-discount">@book.DiscountPercent%</span>
                    }

                </div>
            </div>
        </div>
    </div>
}
