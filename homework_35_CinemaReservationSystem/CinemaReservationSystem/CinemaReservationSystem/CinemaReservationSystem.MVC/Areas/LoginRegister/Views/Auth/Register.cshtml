@using CinemaReservationSystem.MVC.Areas.LoginRegister.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@model UserRegisterVM

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Cinema - Login | Register</title>
    <meta name="robots" content="index, follow" />
    <meta name="description"
          content="Pronia plant store bootstrap 5 template is an awesome website template for any home plant shop." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon -->
    @*  <link rel="shortcut icon"
    type="image/x-icon"
    href="~/loginRegister/assets/images/favicon.ico" /> *@

    <!-- CSS
    ============================================ -->

    <link rel="stylesheet" href="~/loginRegister/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/loginRegister/assets/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/loginRegister/assets/css/Pe-icon-7-stroke.css" />
    <link rel="stylesheet" href="~/loginRegister/assets/css/animate.min.css" />
    <link rel="stylesheet" href="~/loginRegister/assets/css/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/loginRegister/assets/css/nice-select.css" />
    <link rel="stylesheet" href="~/loginRegister/assets/css/magnific-popup.min.css" />
    <link rel="stylesheet" href="~/loginRegister/assets/css/ion.rangeSlider.min.css" />

    <!-- Style CSS -->
    <link rel="stylesheet" href="~/loginRegister/assets/css/style.css" />
</head>

<body>
    <div class="preloader-activate preloader-active open_tm_preloader">
        <div class="preloader-area-wrap">
            <div class="spinner d-flex justify-content-center align-items-center h-100">
                <div class="bounce1"></div>
                <div class="bounce2"></div>
                <div class="bounce3"></div>
            </div>
        </div>
    </div>
    <div class="main-wrapper">
        <main class="main-content">
            <div class="breadcrumb-area breadcrumb-height" style="height:290px !important">
                <div class="container h-100">
                    <div class="row h-100">
                        <div class="col-lg-12">
                            <div class="breadcrumb-item">
                                <h2 class="breadcrumb-heading">Register</h2>

                                <a href="@Url.Action("Index", "Home", new { area = "" })" style="color:white; font-size:20px">Home</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="login-register-area section-space-y-axis-100">
                <div class="container">
                    <div class="row">
                        
                        <div class="col-lg-6 pt-5 pt-lg-0 m-auto">
                            <form action="@Url.Action("Register", "Auth")" method="post">
                                <div class="login-form">
                                    <h4 class="login-title">Register</h4>
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <label asp-for="Name">First Name</label>
                                            <input asp-for="Name" type="text" placeholder="First Name" />
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label asp-for="LastName">Last Name</label>
                                            <input asp-for="LastName" placeholder="Last Name" />
                                            <span class="text-danger" asp-validation-for="LastName"></span>
                                        </div>
                                        <div class="col-md-12">
                                            <label asp-for="Email">Email Address*</label>
                                            <input asp-for="Email" type="email" placeholder="Email Address" />
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="Password">Password</label>
                                            <input asp-for="Password" type="password" placeholder="Password" />
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="ConfirmPassword">Confirm Password</label>
                                            <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                            Register
                                        </button>
                                        <h3 class="text-success">@TempData["Message"]</h3>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <!-- Main Content Area End Here -->
    <!-- Begin Footer Area -->
    <!-- Footer Area End Here -->
    <!-- Begin Scroll To Top -->
    <a class="scroll-to-top" href="">
        <i class="fa fa-angle-double-up"></i>
    </a>
    <!-- Scroll To Top End Here -->
    </div>

    <!-- Global Vendor, plugins JS -->
    <!-- JS Files
    ============================================ -->

    <script src="~/loginRegister/assets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/loginRegister/assets/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="~/loginRegister/assets/js/vendor/jquery-migrate-3.3.2.min.js"></script>
    <script src="~/loginRegister/assets/js/vendor/jquery.waypoints.js"></script>
    <script src="~/loginRegister/assets/js/vendor/modernizr-3.11.2.min.js"></script>
    <script src="~/loginRegister/assets/js/plugins/wow.min.js"></script>
    <script src="~/loginRegister/assets/js/plugins/swiper-bundle.min.js"></script>
    <script src="~/loginRegister/assets/js/plugins/jquery.nice-select.js"></script>
    <script src="~/loginRegister/assets/js/plugins/parallax.min.js"></script>
    <script src="~/loginRegister/assets/js/plugins/jquery.magnific-popup.min.js"></script>
    <script src="~/loginRegister/assets/js/plugins/tippy.min.js"></script>
    <script src="~/loginRegister/assets/js/plugins/ion.rangeSlider.min.js"></script>
    <script src="~/loginRegister/assets/js/plugins/mailchimp-ajax.js"></script>
    <script src="~/loginRegister/assets/js/plugins/jquery.counterup.js"></script>

    <!--Main JS (Common Activation Codes)-->
    <script src="~/loginRegister/assets/js/main.js"></script>
</body>
</html>





