@model List<MovieGetVM>


@{
    int no = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Movie Table</h4>
                        <a asp-action="Create" class="btn btn-success">Create Movie</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Duration
                                        </th>
                                        <th>
                                            Rating
                                        </th>
                                        <th>
                                            Release Date
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var genre in Model)
                                    {
                                        no++;
                                        <tr>
                                            <td class="py-1">
                                                @no
                                            </td>
                                            <td>
                                                <img src="http://localhost:5126/imagesOfMovies/@genre?.ImageUrl" />
                                            </td>
                                            <td>
                                                <p>@genre.Title</p>
                                            </td>
                                            <td>
                                                <p>@genre.Duration</p>
                                            </td>
                                            <td>
                                                <p>@genre.Rating</p>
                                            </td>
                                            <td>
                                                <p>@genre.ReleaseDate.ToString("dd.MM.yyyy")</p>
                                            </td>

                                            <td>
                                                <a class="btn btn-warning btn-info" asp-action="Update" asp-route-id="@genre.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                                <a class="btn btn-danger btn-info" asp-action="Delete" asp-route-id="@genre.Id"><i class="mdi mdi-delete"></i></a>
                                                <a class="btn btn-primary"><i class="mdi mdi-email-open"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-danger">@TempData["Err"]</div>
        </div>
    </div>
</div>