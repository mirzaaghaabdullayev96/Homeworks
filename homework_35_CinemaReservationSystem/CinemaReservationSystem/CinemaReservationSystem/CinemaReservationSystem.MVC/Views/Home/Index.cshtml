

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/front/assets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
</head>
<body>
    <section id="first-section" class="pb-5">
        <div class="navbar d-flex align-items-end">
            <div class="d-flex align-items-center ms-auto">
               @await Component.InvokeAsync("SignIn")
            </div>
        </div>
        </div>

        <div>
            <h1 class="mx-5">Welcome to cinema</h1>
            <h5 class="my-4">Find where to stream new, popular & upcoming entertainment with JustWatch.</h5>
            <div class="d-flex justify-content-center">
                <button class="btn btn-yellow px-5 py-3"><a href="#second-section">Buy ticket</a></button>
            </div>
        </div>
    </section>
    <section id="second-section">
        <div id="movies-list" class="movies-list d-flex justify-content-center">
        </div>
        <div class="text-center mt-4">
            <button id="load-more" class="btn btn-warning mb-5 fw-bold py-2 px-4">Load more</button>
        </div>

        <div class="modal fade" id="movieModal" tabindex="-1" aria-labelledby="movieModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header align-items-center d-flex">
                        <h3 class="modal-title fw-bold" id="movieModalLabel">Movie Title</h3>
                        <p id="modalGenres" class="m-0 px-5 fw-bold"></p>
                    </div>
                    <div class="modal-body d-flex">
                        <img id="modalImage" src="" alt="Movie Poster" class="img-fluid modal-img">
                        <p id="modalSummary" class="px-4"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning fw-bold" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <script src="~/front/assets/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
