@model List<Book>


@{
    int no = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Book Table</h4>
                        <a asp-action="Create" class="btn btn-success">Create Book</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Code
                                        </th>
                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Book book in Model)
                                    {
                                        no++;
                                        <tr>
                                            <td class="py-1">
                                                @no
                                            </td>
                                            <td>
                                                <img src="~/assets/myProducts/productImages/@book.BookImages.FirstOrDefault(x=>x.IsMain==true)?.ImageURL" />
                                            </td>
                                            <td>
                                                <p>@book.Title</p>
                                            </td>
                                            <td>
                                                <p>@book.ProductCode</p>
                                            </td>
                                            <td>
                                                <p>@book.SalePrice</p>
                                            </td>
                                            <td>
                                                <a class="btn btn-warning btn-info" asp-action="Update" asp-route-id="@book.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                                <a class="btn btn-danger btn-info" asp-action="Delete" asp-route-id="@book.Id"><i class="mdi mdi-delete"></i></a>
                                                <a class="btn btn-primary"><i class="mdi mdi-email-open"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
